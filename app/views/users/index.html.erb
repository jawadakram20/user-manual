<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="col-md-10">Users</h3>
      <div class="col-md-2">
        <%= link_to "New User", new_user_url, class: "btn btn-primary"%>
      </div>
    </div>
    <div class="col-md-12">
      <table class="table">
        <thead>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
